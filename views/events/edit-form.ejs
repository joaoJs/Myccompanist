<div class="instrumentalistsWrapper">
<h2 class="instrumentalists"> Edit </h2>
</div>

<div class="eventPostDiv">

  <div class="eventInner">

<form  action="/events/<%=event._id%>/edit-event" method="post">

    <div class="form-group">
      <label for="title"> Title </label>
      <input  id-"title" type="text" name="title" class="form-control"
       value="<%=event.title%>">
      <br>
    </div>

    <div class="form-group">
      <label    for="content"> Event Description </label>
      <textarea  id-"content" type="text" name="content" class="form-control"><%=event.content%></textarea>
      <br>
    </div>

    <div class="form-group">
      <label for="date"> Date </label>
      <input  id-"date" type="date" name="date" class="form-control"
       value="<%=event.date%>">
      <br>
    </div>

    <div class="form-group">
      <label for="time"> Time </label>
      <input  id-"time" type="time" name="time" class="form-control"
        value="<%=event.time%>">
      <br>
    </div>

    <div class="form-group">
      <label for="location"> Location </label>
      <input  id-"location" type="text" name="location" class="form-control"
        value="<%=event.location%>">
      <br>
    </div>

    <div class="form-group">
      <label    for="instruments"> Required Instruments </label>
      <textarea  id="instruments" type="text" name="instruments" class="form-control"><%=event.requiredInstruments%></textarea>
    </div>

    <button class="btn btn-default"> Submit Changes </button>

</form>

</div>

</div>
